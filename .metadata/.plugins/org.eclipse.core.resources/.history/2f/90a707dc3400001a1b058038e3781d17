		signInPage.clickSignInButton();*/
		
		dressPage.goToPage();
		//dressPage.addTheHighestPriceDressToCart();
		dressPage.clickCart();
		WebDriverWait wait = new WebDriverWait(driver, 20); 
		
		try {
			Thread.sleep(4000);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	/**
	 * Clean up after each test
	 */
	@AfterEach
	public void cleanUp() {
		driver.close();
	}

}
